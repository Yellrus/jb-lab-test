.latest-posts
	width 298px
	+at(3)
		width 250px

	&__info
		display flex
		flex-direction column
		justify-content center

	&__title
		font-family $main-font
		font-size 18px
		line-height 2.78
		font-weight 700
		letter-spacing -0.025em
		text-transform uppercase
		color $white-color
		margin-bottom 10px

	&__item
		display flex
		align-items center
		margin-bottom 15px
		
		&--margin
			margin-bottom 18px

	&__icon
		flex-shrink 0
		fill-rule evenodd
		fill $footer-svg

		&--news
			width 25px
			height 20px
			margin-right 15px

		&--photo
			width 25px
			height 22px
			margin-right 15px

		&--media
			width 17px
			height 20px
			margin-right 19px
			margin-left 5px

	&__value
		font-family $sub-font
		font-style normal
		line-height 1.5
		color $gray-whisper
		text-transform capitalize

		&:hover, &:focus
			color $brand-color
