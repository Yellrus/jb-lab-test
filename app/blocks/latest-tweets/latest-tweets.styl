.latest-tweets
	width 291px
	+at(3)
		width 250px

	&__info
		display flex
		flex-direction column
		justify-content center


	&__inner
		max-width 250px
		display flex
		flex-direction column
		flex-shrink 0
		+at(2)
			max-width 220px

	&__title
		font-family $main-font
		font-size 18px
		line-height 2.78
		font-weight 700
		letter-spacing -0.025em
		text-transform uppercase
		color $white-color
		margin-bottom 10px

	&__item
		display flex
		margin-bottom 16px

	&__icon
		flex-shrink 0
		fill-rule evenodd
		fill $footer-svg

		&--twitter
			width 23px
			height 18px
			margin-right 18px

	&__value
		font-family $sub-font
		font-style normal
		line-height 1.3
		letter-spacing 0.007em
		color $gray-whisper

		&:hover, &:focus
			color $brand-color

	&__hashtags
		display flex
		flex-wrap wrap

	&__hashtag
		font-family $sub-font
		font-weight 700
		color $gray-whisper
		margin-bottom 5px
		margin-right 3px

	&__time
		font-family $sub-font
		font-size 12px
		color $gray-whisper
