.section-reviews

	&__review-client
		display flex
		+at(2)
			center()
			flex-direction column
		+at(3)
			flex-direction row

	&__heading
		center()
		text-align center
		margin-bottom 85px
		+at(2)
			text-align center
			margin-bottom 40px
		+at(3)
			margin-bottom 45px

	&__title
		section-title()
		margin-bottom 8px
		+at(2)
			font-size 28px
		+at(3)
			font-size 40px

	&__sub-title
		sub-title()
		+at(2)
			font-size 17px
		+at(3)
			font-size 20px

	&__review-client
		display flex
		align-items center
		margin-bottom 30px

		&--margin
			margin-left 35px

	&__avatar
		width 226px
		height 226px
		border 3px solid $white-color
		background-color $bg-block
		border-radius 50%
		flex-shrink 0
		+at(2)
			order -1
		+at(3)
			order 0

		&--margin-right
			margin-right 40px
			+at(3)
				margin-right 30px

		&--margin-left
			margin-left 40px
			+at(3)
				margin-left 30px

		&--margin-left,
		&--margin-right
			+at(2)
				margin 0 0 15px 0

	&__review
		position relative
		width 641px
		padding 13px 51px 33px 45px
		text-align center
		background-color $bg-block
		&::before
			display block
			content ''
			transform translate(-65px,65px)
			width 0
			height 0
			border-style solid
			border-width 11.5px 20px 11.5px 0
			border-color transparent $bg-block transparent transparent
		+at(2)
			max-width 100%

	&__review-text
		font-size 22px
		color $text-color
		font-family $sub-font
		line-height 1.46
		margin-bottom 5px
		+at(2)
			font-size 16px
		+at(3)
			font-size 18px

	&__author
		position relative
		font-size 18px
		line-height 2
		font-family $sub-font
		font-style normal
		color $brand-color
		padding-right 20px
		&::before
			content '-'
			position absolute
			margin-left -13px
		+at(2)
			font-size 15px
		+at(3)
			font-size 16px	

		&--padding
			padding-right 45px
			+at(3)
				padding-right 0
