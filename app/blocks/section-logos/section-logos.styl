.section-logos
	padding-top 62px
	padding-bottom 62px

	&__wrapper
		center()
		hidetext()
		max-width 760px
		display flex
		flex-wrap wrap
		justify-content space-between
		align-items center
		+at(2)
			flex-direction column
		+at(3)
			flex-direction row
			flex-wrap wrap
	&__logo
		+at(2)
			margin-bottom 15px
		+at(3)
			margin-bottom 0
