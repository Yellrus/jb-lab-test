.section-values
	padding 95px 0 75px 0
	background-color $bg-block

	&__heading
		center()
		text-align center
		margin-bottom 80px
		+at(2)
			text-align center
			margin-bottom 40px
		+at(3)
			margin-bottom 45px

	&__title
		section-title()
		margin-bottom 8px
		+at(2)
			font-size 28px
		+at(3)
			font-size 40px

	&__sub-title
		sub-title()
		+at(2)
			font-size 17px
		+at(3)
			font-size 20px

	&__wrapper-items
		display flex
		flex-wrap wrap
		justify-content space-between
		position relative

	&__icon-item
		width 150px
		margin-bottom 23px
		margin-left auto
		margin-right auto
		&::after
			position absolute
			display block
			top 48px
			right -107px
			content ''
			border 1px solid $gray-dark
			padding-left 168px
			+at(2)
				border none
			+at(3)
				border 1px solid $gray-dark
				right -82px
		&--border
			&::after
				+at(3)
					border none

		&--no-border
			&::after
				border none
				+at(3)
					border none

	&__circle
		center()
		position relative
		display block
		width 91px
		height 91px
		border 3px solid $gray-dark
		border-radius 50%
		&::after
			display block
			position absolute
			content ''
			width 91px
			height 91px
			background-position center center
			background-repeat no-repeat

		&--icon-music
			&::after
				background-image svg('icon-music')
				background-size 46px 47px
				background-position 15px center
		&--icon-graph
			&::after
				background-image svg('icon-graph')
				background-size 35px 46px
				background-position 25px 20px
		&--icon-star
			&::after
				background-image svg('icon-star')
				background-position 18px center
				background-size 49px 47px

	&__inner-item
		width 284px
		padding-bottom 25px
		text-align center
		position relative
		+at(2)
			margin-bottom 35px
		+at(3)
			flex 1 1 274px
			margin-bottom 25px

	&__title-item
		font-size 18px
		font-weight 700
		text-transform uppercase
		letter-spacing -0.025em
		padding-left 4px
		margin-bottom 9px

	&__text-item
		font-size 14px
		text-align center
		font-family $sub-font
		color $text-color
		letter-spacing -0.025em
