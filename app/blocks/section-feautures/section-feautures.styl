.section-feautures
	display flex
	width 100%

	&__gear
		position relative
		flex-shrink 0
		flex-basis 430px
		flex-grow 0
		background-color $gray-light
		padding 308px 0
		+at(1)
			display none
		+at(2)
			display none
		+at(3)
			flex 1
		&::after
			position absolute
			display block
			content ''
			top 0
			right 0
			width 100%
			height 100%
			background-image svg('gear')
			background-repeat no-repeat
			background-position calc(100% + 195px)

	&__relax
		width 970px
		background #261f17 url('../images/section-feautures__bg.jpg') no-repeat
		background-size cover
		box-shadow inset 0 0 0 2000px rgba(black,0.75)
		padding 90px 100px 90px 100px
		flex-grow 1
		+at(2)
			padding 30px
			max-width 100%
		+at(3)
			padding 30px 50px
			max-width 100%

	&__title
		section-title()
		margin-bottom 30px
		line-height 1.3
		&--color-title
			color $white-color
		+at(2)
			font-size 28px
		+at(3)
			font-size 40px

	&__color
		color $brand-color

	&__list-items,
	&__text
		font-family $sub-font
		color	$gray-color
		letter-spacing -0.025em


	&__text
		margin-bottom 20px

	&__list-items
		display flex
		flex-direction column
		position relative
		margin-bottom 40px

	&__item
		display flex
		align-items center
		padding-left 53px
		margin-bottom 10px
		line-height 2
		+at(2)
			width 250px
		+at(3)
			width 100%
		&--marker
			&::before
				position absolute
				left 0
				display block
				content ''
				width 31px
				height 31px
				border 1px solid $gray-color
				border-radius 50%
				background-image svg('checkmark')
				background-repeat no-repeat
				background-position center
				background-size 16px 12px
